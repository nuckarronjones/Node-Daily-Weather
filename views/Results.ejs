<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include ("./partials/head.ejs") %>
  </head>
  <body>
    <div id="crtvOverlay"></div>
    <div id="pageContainer">
      <div class="container glitch">
        <form action="/" method="POST">
          <%-include ("./partials/innerForm.ejs") %>
        </form>

        <h2 id="cityTitle" class="typeWriter mt-5" data-weather="<%=city %>">
          
        </h2>

        <div class="row mt-4">
          <div class="col-6 mt-2">
            <p class="typeWriter" data-weather=" <%=weatherData.main.temp_min %>">
              Temperature Min:
            </p>
            <p class="typeWriter" data-weather=" <%=weatherData.main.temp_max %>">
              Temperature Max:
            </p>
            <p class="typeWriter" data-weather=" <%=weatherData.main.humidity %>">
              Humidity:
            </p>
            <p class="typeWriter" data-weather=" <%=weatherData.weather[0].description %>">
              Description:
            </p>
          </div>
          <div
            class="col-6 mt-2 d-flex justify-content-center align-items-center"
          >
            <div class="row">
              <div class="col-6">
                <div id="weatherBoxIcon">
                  <!-- weather.weather[0].description -->
                  <% switch ("thunderstorm") { case 'snow' : %>
                  <i class="bi bi-cloud-sun weatherIcon "></i>
                  <% break; case 'few clouds' : %>
                  <i class="bi bi-cloud-sun weatherIcon "></i>
                  <% break; case 'scattered clouds' : %>
                  <i class="bi bi-clouds weatherIcon "></i>
                  <% break; case 'broken clouds' : %>
                  <i class="bi bi-clouds weatherIcon "></i>
                  <% break; case 'shower rain' : %>
                  <i class="bi bi-cloud-drizzle weatherIcon "></i>
                  <% break; case 'rain' : %>
                  <i class="bi bi-cloud-rain-heavy weatherIcon "></i>
                  <% break; case 'snow' : %>
                  <i class="bi bi-cloud-snow weatherIcon "></i>
                  <% break; case 'mist' : %>
                  <i class="bi bi-cloud-fog weatherIcon "></i>
                  <% break; case 'thunderstorm' : %>
                  <i class="bi bi-cloud-lightning weatherIcon "></i>
                  <% break; } %>
                </div>
              </div>
              <div
                class="col-6 d-flex justify-content-center align-items-center"
              >
                <h1 class="glitch">
                  <%= Math.trunc(weatherData.main.temp) %>ÂºF
                </h1>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js.js" type="text/javascript"></script>
  </body>
</html>
